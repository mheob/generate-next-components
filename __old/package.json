{
  "name": "generate-next-components",
  "version": "0.0.0",
  "description": "Boilerplate for React and Next.js components and pages",
  "keywords": [
    "react",
    "nextjs",
    "cli",
    "build-tool",
    "boilerplate"
  ],
  "homepage": "https://github.com/mheob/generate-next-components",
  "bugs": {
    "url": "https://github.com/mheob/generate-next-components/issues"
  },
  "repository": {
    "url": "https://github.com/mheob/generate-next-components"
  },
  "funding": {
    "url": "https://github.com/sponsors/mheob"
  },
  "license": "MIT",
  "author": {
    "name": "Alexander BÃ¶hm",
    "email": "ab@its-boehm.de"
  },
  "main": "dist/index.js",
  "bin": "./bin/gnc.js",
  "files": [
    "bin",
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "yarn clear:dist && swc src -d dist",
    "changeset": "changeset",
    "clear": "yarn clear:deps & yarn clear:dist",
    "clear:deps": "rimraf node_modules yarn.lock",
    "clear:dist": "rimraf dist",
    "deduplicate": "yarn dedupe --strategy highest",
    "dev": "yarn build && node bin/gnc.js",
    "format": "prettier --write **/*.{ts,json,md,yml}",
    "postinstall": "husky install",
    "lint": "eslint . --ext .ts",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable",
    "test": "echo \"WARNING: no test specified so far\""
  },
  "lint-staged": {
    "**/*.{ts,json,md,yml}": "yarn format",
    "**/*.ts": "eslint --fix",
    "package.json": "yarn dlx sort-package-json",
    "yarn.lock": "yarn deduplicate"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "inquirer": "^8.2.2",
    "semver": "^7.3.5",
    "yargs": "^17.4.0"
  },
  "devDependencies": {
    "@jest/types": "^27.5.1",
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.2.162",
    "@swc/jest": "^0.2.20",
    "@types/inquirer": "^8.2.1",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.23",
    "@types/semver": "^7.3.9",
    "@types/yargs": "^17.0.10",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "eslint": "^8.12.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-unicorn": "^42.0.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.7",
    "pinst": "^3.0.0",
    "prettier": "^2.6.1",
    "prettier-plugin-jsdoc": "^0.3.36",
    "regenerator-runtime": "^0.13.9",
    "rimraf": "^3.0.2",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3"
  },
  "engines": {
    "node": ">=16.13.0"
  },
  "packageManager": "yarn@3.2.0"
}
